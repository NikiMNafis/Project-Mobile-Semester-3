<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity"
    android:padding="25dp"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <!--View Group Line-->
        <LinearLayout
            android:id="@+id/lineGroup"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:gravity="center">

    <!--Button Back-->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/arrowleft"
            android:onClick="onClick"
            android:layout_gravity="left"
            />
    <!--View Group Edit Text-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Hubungi Kami"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_bold"
                />

            <TextView
                android:id="@+id/text2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="Hubungi kami untuk order jasa/info lebih lanjut"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_below="@+id/text1"
                android:fontFamily="@font/lato_regular"
                />

            <!--Edit Text Email-->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/inp_chat"
                android:inputType="textShortMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="@drawable/custom_input"
                android:hint="Isi pesan"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:layout_marginTop="102dp"
                />
            <!--Button Masuk-->
            <ImageButton
                android:id="@+id/btn_masuk"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_arrow_white"
                android:layout_below="@+id/inp_chat"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:onClick="onClick"
                />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>