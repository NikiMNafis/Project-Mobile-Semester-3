<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProjectFragment"
    android:layout_marginTop="55dp"
    android:layout_above="@+id/bottom_navigation"
    android:background="@android:color/transparent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project Teratas"
        android:textColor="@color/white"
        android:fontFamily="@font/lato_regular"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        >

        <ImageView
            android:id="@+id/img_1"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:background="@drawable/round_corner"
            android:layout_margin="10dp" />
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:background="@drawable/round_corner"
            android:layout_toRightOf="@+id/img_1"
            android:layout_margin="10dp" />
        <ImageView
            android:id="@+id/img_3"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:background="@drawable/round_corner"
            android:layout_below="@+id/img_1"
            android:layout_margin="10dp" />
        <ImageView
            android:id="@+id/img_4"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:background="@drawable/round_corner"
            android:layout_below="@id/img_2"
            android:layout_toRightOf="@id/img_3"
            android:layout_margin="10dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        >
        <ImageView
            android:id="@+id/img_a"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/round_corner_menu"
            android:src="@drawable/weddingstage"
            android:layout_marginRight="58dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wedding Stage"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_a"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:id="@+id/img_b"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/round_corner_menu"
            android:src="@drawable/eventparty"
            android:layout_toRightOf="@+id/img_a"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Party"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_b"
            android:layout_marginLeft="195dp"
            />

        <ImageView
            android:id="@+id/img_c"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/round_corner_menu"
            android:src="@drawable/graduation"
            android:layout_below="@+id/img_b"
            android:layout_marginRight="58dp"
            android:layout_marginTop="110dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graduation"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_c"
            android:layout_marginLeft="18dp"
            />

        <ImageView
            android:id="@+id/img_d"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:background="@drawable/round_corner_menu"
            android:src="@drawable/schoolparty"
            android:layout_below="@+id/img_b"
            android:layout_toRightOf="@+id/img_c"
            android:layout_marginTop="110dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="School Party"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_regular"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/img_d"
            android:layout_marginLeft="192dp"
            />
    </RelativeLayout>

</FrameLayout>