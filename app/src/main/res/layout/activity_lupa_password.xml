<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="@color/white"
    tools:context=".LupaPasswordActivity"
    >

<!--Button Back-->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/arrowleft"
        android:padding="100dp"
        android:onClick="onClick"
        />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa kata sandi?"
        android:textSize="28dp"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/lato_bold"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temukan akun anda"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/text1"
        android:layout_marginLeft="30dp"
        android:fontFamily="@font/lato_regular"
        />

<!--View Group Edit Text-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:gravity="center"
        >
<!--Group Input Email-->
        <ImageView
            android:id="@+id/img1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/mail"
            android:layout_marginTop="2dp"
            />
        <ImageView
            android:id="@+id/line1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/line_ver"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginTop="2dp"
            />
<!--Edit Text Email-->
        <EditText
            android:id="@+id/inp_LPass"
            android:inputType="text"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:background="@drawable/custom_input"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:hint="Email atau Nomor Telepon"
            android:layout_toRightOf="@+id/line1"
            android:layout_marginTop="2dp"
            />
    </RelativeLayout>

<!--View Group Line-->
    <LinearLayout
        android:id="@+id/lineGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="180dp"
        android:gravity="center">
<!--Underline Input Email or Phone-->
        <ImageView
            android:layout_width="320dp"
            android:layout_height="25dp"
            android:background="@drawable/line"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>

<!--Button next-->
    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_arrow_white"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/lineGroup"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        />

</RelativeLayout>